<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - CS470 Capstone</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("CS470 Capstone CCF", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Log", "Index", "Log")</li>
                    <li>@Html.ActionLink("Configuration", "Index", "Configuration")</li>
                    <li>@Html.ActionLink("SSIS_Configuration", "Index", "SSIS_Configuration")</li>
                    <li>@Html.ActionLink("Sysssislog", "Index", "Sysssislog")</li>

                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()

        @*<h1>Software Engineering Project</h1>

            <p>More text to follow...</p>*@


        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @* Modals *@

    <!-- Log details modal -->
    <div class="modal fade" id="modal-log-details" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-sm fa-times"></span></button>
                    <h4 class="modal-title">Log</h4>
                </div>
                <div class="modal-body">
                    <div id="log-details">
                        <table id="table-log-details" class="table table-bordered table-condensed table-striped table-responsive">
                            <tbody></tbody>
                        </table>
                    </div>
                    <div class="spinner hidden" id="loading-log-details">
                        <div class="rect1"></div>
                        <div class="rect2"></div>
                        <div class="rect3"></div>
                        <div class="rect4"></div>
                        <div class="rect5"></div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Formatted Message modal -->
    <div class="modal fade" id="modal-pretty-json" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-sm fa-times"></span></button>
                    <h4 class="modal-title">Formatted Message</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label for="input-json-search">Keyword</label>
                        <input id="input-json-search" class="form-control json-search" type="text" placeholder="Enter search term" />
                        <small id="no-search-value" class="form-text text-muted hidden">Please enter a search term</small>
                        <br />
                        <label for="input-json-char-limit">Char limit</label>
                        <input id="input-json-char-limit" class="form-control json-search" type="number" max="200" placeholder="100" />
                        <small id="no-char-value" class="form-text text-muted hidden">Please enter a character limit</small>
                        <br /><br />
                        <button id="button-search-json" class="btn btn-primary">Search JSON data &nbsp; <span class="fa fa-search"></span></button>
                    </div>
                    <div id="json-search-result">
                        <textarea id="input-json-search-result" type="text" class="form-control" placeholder="result" readonly></textarea>
                        <button id="copy-json-result" class="btn btn-primary"><span class="fa fa-clipboard"></span></button>
                    </div>
                    <br />
                    <div id="pretty-json" class="well"></div>
                    <button id="copy-json" class="btn btn-primary"><span class="fa fa-clipboard"></span></button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <!-- Configuration modal -->
    <div class="modal fade" id="modal-configuration" role="dialog" tabindex="-1">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="fa fa-sm fa-times"></span></button>
                    <h4 class="modal-title" id="modal-title-configuration">Configure</h4>
                </div>
                <div id="quickValueTypeSelect">
                    <h3>Select Quick Value type</h3>
                    <select id="quickConfigurationType">
                        <option value="Boolean">Boolean</option>
                        <option value="String">String</option>
                        <option value="Int">Int</option>
                        <option value="HTML">HTML</option>
                    </select>
                </div>
                <div class="modal-body">
                    <h3>Or Change Value Here:</h3>
                    <div id="configuration-details">
                        <table id="table-configuration-details" class="table table-bordered table-condensed table-striped table-responsive">
                            <tbody></tbody>
                        </table>
                    </div>
                </div>
                <div class="modal-footer">
                    <div id="changeConfigSubmit">
                       
                        <button type="button" id="buttonSubmitConfigurationChange" class="btn btn-success">Submit Changes</button>
                    </div>
                    <div id="closeConfigurationChange">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>

                    </div>
                </div>
               
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
